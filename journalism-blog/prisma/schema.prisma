generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL") // For production use, replace with a hosted DB like Supabase/PlanetScale
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
}

model Article {
  id        Int      @id @default(autoincrement())
  title     String
  slug      String   @unique
  excerpt   String?
  content   String   // store Markdown
  published Boolean  @default(true)
  category  String?
  coverUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
